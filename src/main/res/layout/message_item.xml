<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/text_feedback_content_border"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_name"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="Vartika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sent_message_num_text"
        android:layout_toRightOf="@id/user_name"
        android:layout_toEndOf="@id/user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="Message Sent:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fav_message_num_text"
        android:layout_toRightOf="@id/sent_message_num_text"
        android:layout_toEndOf="@id/sent_message_num_text"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="fav message num:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>