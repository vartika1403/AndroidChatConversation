<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="22sp"
        android:text="Vartika"
        android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sent_message_num_text"
        android:layout_toRightOf="@id/user_name"
        android:layout_toEndOf="@id/user_name"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fav_message_num_text"
        android:layout_toRightOf="@id/sent_message_num_text"
        android:layout_toEndOf="@id/sent_message_num_text"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/fav_message_num_text"
        android:background="@color/card_expand_title_color"/>

</RelativeLayout>