<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/user_name"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:text="Vartika"
        android:textStyle="bold"
        android:textColor="@color/colorChatBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/send_message_text"
        android:text="sent:"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sent_message_num_text"
        android:layout_toRightOf="@id/send_message_text"
        android:layout_toEndOf="@id/send_message_text"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/circle_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fav_message_text"
        android:text="fav:"
        android:layout_toRightOf="@id/sent_message_num_text"
        android:layout_toEndOf="@id/sent_message_num_text"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fav_message_num_text"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/circle_background"
        android:layout_toRightOf="@id/fav_message_text"
        android:layout_toEndOf="@id/fav_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/fav_message_num_text"
        android:background="@color/card_expand_title_color"/>

</RelativeLayout>