<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/user_name"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:text="Vartika"
        android:textStyle="bold"
        android:textColor="@color/colorChatBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fav_message_num_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sent_message_num_text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/fav_message_num_text"
        android:background="@color/card_expand_title_color"/>

</RelativeLayout>