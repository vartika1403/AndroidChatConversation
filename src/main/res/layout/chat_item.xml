<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/text_feedback_content_border"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/name_text"
        android:text="Vartika"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@id/user_profile_image"
        android:layout_toEndOf="@id/user_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_name_text"
        android:layout_below="@id/user_profile_image"
        android:text="vats"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/body_text"
        android:layout_below="@id/user_name_text"
        android:text="body"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_time"
        android:layout_below="@id/user_name_text"
        android:layout_toRightOf="@id/body_text"
        android:layout_toEndOf="@id/body_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>